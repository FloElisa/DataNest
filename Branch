<body>
  <h1>üê¶üì° DataNest</h1>
  <div class="tagline">Signal from the swarm ‚Äî where knowledge lands.</div>

  <form id="sourceForm">
    <input type="text" id="title" placeholder="Title or short description" required />
    <input type="url" id="link" placeholder="Link (URL or location)" required />
    <textarea id="note" placeholder="Optional note..."></textarea>
    <input type="text" id="tags" placeholder="Tags (comma-separated, e.g. TNFD, policy)" />
    <button type="submit">Save Source</button>
  </form>

  <div class="filter-box">
    <input type="text" id="filterTag" placeholder="Filter by tag..." oninput="filterSources()" />
  </div>

  <div class="sources" id="sourceList"></div>

  <script>
    const form = document.getElementById('sourceForm');
    const list = document.getElementById('sourceList');
    const filterTag = document.getElementById('filterTag');
    const titleInput = document.getElementById('title');
    const linkInput = document.getElementById('link');

    let sources = JSON.parse(localStorage.getItem('sources')) || [];

    function saveToStorage() {
      localStorage.setItem('sources', JSON.stringify(sources));
    }

    function renderSources(filter = '') {
      list.innerHTML = '';
      sources.filter(src => {
        return filter === '' || src.tags.some(tag => tag.toLowerCase().includes(filter.toLowerCase()));
      }).forEach((source, index) => {
        const div = document.createElement('div');
        div.className = 'source';
        div.innerHTML = `
          <strong><a href="${source.link}" target="_blank">${source.title}</a></strong>
          <span class="edit-title" onclick="editTitle(${index})">[edit]</span>
          <p>${source.note || ''}</p>
          <div class="tags">Tags: ${source.tags.join(', ') || '<i>No tags</i>'}</div>
          <div class="date">Added: ${source.date}</div>
        `;
        list.appendChild(div);
      });
    }

    function editTitle(index) {
      const newTitle = prompt("Edit title:", sources[index].title);
      if (newTitle !== null) {
        sources[index].title = newTitle;
        saveToStorage();
        renderSources(filterTag.value);
      }
    }

    form.addEventListener('submit', e => {
      e.preventDefault();
      const title = titleInput.value.trim();
      const link = linkInput.value.trim();
      const note = document.getElementById('note').value.trim();
      const tags = document.getElementById('tags').value.split(',').map(t => t.trim()).filter(t => t);
      const date = new Date().toLocaleDateString();

      sources.unshift({ title, link, note, tags, date });
      saveToStorage();
      renderSources(filterTag.value);
      form.reset();
    });

    function filterSources() {
      renderSources(filterTag.value);
    }

    linkInput.addEventListener('blur', async function () {
      const url = this.value;
      if (!url) return;
      try {
        const response = await fetch(`https://api.allorigins.win/get?url=${encodeURIComponent(url)}`);
        const data = await response.json();
        const titleMatch = data.contents.match(/<title>(.*?)<\/title>/);
        if (titleMatch) {
          titleInput.value = titleMatch[1];
        }
      } catch (e) {
        console.warn("Could not fetch page title", e);
      }
    });

    renderSources();
  </script>
</body>
